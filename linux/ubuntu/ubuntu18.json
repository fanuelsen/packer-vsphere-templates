{
  "builders": [
    {
      "type": "vsphere-iso",
      "guest_os_type": "ubuntu64Guest",
      "vm_name": "{{user `vm_name_1804`}}",
      "CPUs": "{{user `vm_cpu_num`}}",
      "RAM": "{{user `vm_mem_size`}}",
      "RAM_reserve_all": "true",
      "disk_controller_type": "pvscsi",
      "boot_order": "disk,cdrom",
      "datacenter": "{{user `datacenter`}}",
      "cluster": "{{user `cluster`}}",
      "vcenter_server": "{{user `vcenter_server`}}",
      "username": "{{user `vcenter_username`}}",
      "password": "{{user `vcenter_password`}}",
      "datastore": "{{user `datastore`}}",
      "convert_to_template": "true",
      "folder": "{{user `folder`}}",
      "host": "{{user `host`}}",
      "insecure_connection": "true",
      "iso_checksum": "{{user `iso_checksum_type`}}:{{user `iso_checksum_1804`}}",
      "iso_urls": "{{user `iso_url_1804`}}",
      "ssh_password": "{{user `ssh_password`}}",
      "ssh_username": "{{user `ssh_username`}}",
      "http_directory": "http",
      "boot_command": [
        "<esc><wait>",
        "<esc><wait>",
        "<enter><wait>",
        "/install/vmlinuz",
        " initrd=/install/initrd.gz",
        " priority=critical",
        " locale=en_US",
        " preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg<wait>",
        "<enter>"
      ],
      "network_adapters": [
        {
          "network": "{{user `network`}}",
          "network_card": "vmxnet3"
        }
      ],
      "storage": [
        {
          "disk_size": "{{user `vm_disk_size`}}",
          "disk_thin_provisioned": "true"
        }
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "echo 'packer' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "scripts/update.sh"
    },
    {
      "type": "shell",
      "execute_command": "echo 'packer' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "scripts/minimize.sh"
    },
    {
      "type": "shell",
      "execute_command": "echo 'packer' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "scripts/cleanup.sh"
    },
    {
      "type": "shell",
      "inline": ["echo 'Packer Template Build -- Complete'"]
    }
  ]
}

